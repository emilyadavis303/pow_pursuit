%body.all-resorts
  .resorts-site-wrapper
    .site-wrapper-inner
      .cover-container
        .inner.cover
          %h1.cover-heading Your Pow Adventures
          .row
            .container-fluid
              .col-sm-2.blog-sidebar
                .sidebar-module
                  = image_tag current_user.avatar.url(:thumb)
                  %h3 Your Resorts
                  - current_user.favorites.each do |favorite|
                    %a{:href => resort_path(favorite)}
                      %img.img-rounded.resort{:src => favorite.resort.logo, :style => "width: 100px; height: 100px;"}
